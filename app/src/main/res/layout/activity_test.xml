<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity">


    <TextView
        android:id="@+id/id_image_head"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="图像"
        android:textColor="@android:color/white"
        android:background="@drawable/circle_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/id_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="AOAxxxxxxxxxx"
        android:textColor="@android:color/background_dark"
        app:layout_constraintBaseline_toBaselineOf="@id/id_image_head"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toRightOf="@id/id_image_head"
        app:layout_constraintRight_toLeftOf="@id/id_desc"
        />



    <TextView
        android:id="@+id/id_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="主唱"
        android:gravity="center"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:textColor="@android:color/background_dark"
        app:layout_constraintBaseline_toBaselineOf="@id/id_image_head"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"
        />

        <TextView
            android:id="@+id/id_text_tip_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/id_image_head"
            app:layout_constraintStart_toStartOf="@id/id_image_head"
            android:layout_margin="10dp"
            android:text="星座"
            />

        <TextView
            android:id="@+id/id_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:text="白"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toStartOf="@id/id_text_2"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_text_tip_1" />

        <TextView
            android:id="@+id/id_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:text="土"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toStartOf="@id/id_text_3"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/id_text_1"
            app:layout_constraintTop_toBottomOf="@id/id_text_tip_1" />

        <TextView
            android:id="@+id/id_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:text="牛"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toStartOf="@id/id_text_4"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/id_text_2"
            app:layout_constraintTop_toBottomOf="@id/id_text_tip_1" />

        <TextView
            android:id="@+id/id_text_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:text="子"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/id_text_3"
            app:layout_constraintTop_toBottomOf="@id/id_text_tip_1" />



        <TextView
            android:id="@+id/id_text_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:text="白"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toStartOf="@id/id_text_12"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_text_1" />

        <TextView
            android:id="@+id/id_text_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:text="土"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toStartOf="@id/id_text_13"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/id_text_11"
            app:layout_constraintTop_toBottomOf="@id/id_text_2" />

        <TextView
            android:id="@+id/id_text_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:text="牛"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toStartOf="@id/id_text_14"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/id_text_12"
            app:layout_constraintTop_toBottomOf="@id/id_text_3" />

        <TextView
            android:id="@+id/id_text_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:text="子"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/id_text_13"
            app:layout_constraintTop_toBottomOf="@id/id_text_4" />

    <LinearLayout
        android:id="@+id/id_text_left"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_text_11"
        app:layout_constraintEnd_toStartOf="@id/id_text_right"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="星座" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="星座" />
    </LinearLayout>

    <TextView
        android:id="@+id/id_text_right"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/id_text_11"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/id_text_left"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="GO"
        />

</android.support.constraint.ConstraintLayout>